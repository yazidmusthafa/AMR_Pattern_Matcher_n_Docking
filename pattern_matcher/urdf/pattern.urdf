<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="pattern" >

    <link name="world" />

    <joint name="pattern_joint" type="fixed">
        <parent link="world" />
        <child link="pattern_mesh" />
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>

    <link name="pattern_mesh">
        <visual>
            <origin xyz="-0.175 0.05 -0.25" rpy="1.5707 0 0" />
            <geometry>
                <mesh filename="$(find pattern_matcher)/meshes/pattern.STL"  scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <origin xyz="-0.175 0.05 -0.25" rpy="1.5707 0 0" />
            <geometry>
                <mesh filename="$(find pattern_matcher)/meshes/pattern.STL"  scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="10.0" />
            <inertia ixx="1.0" ixy="0.0"  ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
        </inertial> 

    </link>

</robot>